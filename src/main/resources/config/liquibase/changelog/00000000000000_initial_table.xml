<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <property name="autoIncrement" value="true"/>

    <changeSet id="20241114133500-1" author="LV">
        <createTable tableName="project">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="ownerId" type="bigint">
                <constraints nullable="false"/>
            </column>
            <!--audit-->
            <column name="created_date" type="timestamp" defaultValueDate='${now}'>
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_date" type="timestamp">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createSequence sequenceName="project_id_seq" startValue="1000" incrementBy="1"/>

        <createTable tableName="task">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="project_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="status" type="varchar(63)">
                <constraints nullable="false"/>
            </column>
            <column name="assigned_to" type="bigint"/>
            <!--audit-->

            <column name="created_date" type="timestamp" defaultValueDate='${now}'>
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_date" type="timestamp">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createSequence sequenceName="task_id_seq" startValue="1000" incrementBy="1"/>

        <createTable tableName="user">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(63)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="text"/>
            <column name="role" type="varchar(63)">
                <constraints nullable="false"/>
            </column>
            <!--audit-->
            <column name="created_date" type="timestamp" defaultValueDate='${now}'>
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_date" type="timestamp">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createSequence sequenceName="user_id_seq" startValue="1000" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>
